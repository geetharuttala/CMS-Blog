<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Article | CMS Blog</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <style>
      /* Modern Form Page Styles */
      .page-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8edf2 100%);
      }

      .form-header {
        background: linear-gradient(
          135deg,
          var(--secondary-color) 0%,
          #1a2639 100%
        );
        color: white;
        padding: 3rem 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
      }

      .form-header::before {
        content: "";
        position: absolute;
        top: -50px;
        right: -50px;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        z-index: 1;
      }

      .form-header::after {
        content: "";
        position: absolute;
        bottom: -30px;
        left: -30px;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        z-index: 1;
      }

      .form-header h1 {
        color: white;
        border-bottom: none;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        position: relative;
        z-index: 2;
      }

      .form-header p {
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
        position: relative;
        z-index: 2;
      }

      .form-container {
        background-color: white;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        max-width: 1000px;
        margin: 0 auto 3rem;
        position: relative;
        overflow: hidden;
      }

      .form-container::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: linear-gradient(
          to right,
          var(--primary-color),
          var(--secondary-color)
        );
      }

      /* Grid-based layout without sections */
      .form-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.2rem;
      }

      .form-group {
        margin-bottom: 1.2rem;
        position: relative;
      }

      .form-group.full-width {
        grid-column: span 2;
      }

      .form-group.half-width {
        grid-column: span 1;
      }

      .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.6rem;
        color: #333;
        transition: all 0.3s;
      }

      .form-group input[type="text"],
      .form-group input[type="date"],
      .form-group textarea {
        width: 100%;
        padding: 0.9rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-family: inherit;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
      }

      .form-group input[type="text"]:focus,
      .form-group input[type="date"]:focus,
      .form-group textarea:focus {
        border-color: var(--primary-color);
        outline: none;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        background-color: white;
      }

      /* File Input Styles */
      .file-input-container {
        position: relative;
        padding: 1.5rem;
        border: 2px dashed #ddd;
        border-radius: 8px;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        background-color: #f9f9f9;
        overflow: hidden;
      }

      .file-input-container:hover {
        border-color: var(--primary-color);
        background-color: rgba(52, 152, 219, 0.05);
      }

      .file-input-container input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
      }

      .file-input-icon {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
      }

      .file-input-text {
        color: #666;
      }

      .file-name {
        margin-top: 0.5rem;
        font-size: 0.9rem;
        color: var(--primary-color);
        display: none;
      }

      /* Current Image Preview */
      .current-image {
        margin-bottom: 1rem;
      }

      .image-preview {
        max-width: 200px;
        max-height: 150px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: block;
        margin-bottom: 0.5rem;
      }

      .image-filename {
        font-size: 0.85rem;
        color: #666;
      }

      .help-text {
        font-size: 0.85rem;
        color: #666;
        margin-top: 0.5rem;
      }

      /* Toggle Switch Styles */
      .toggle-container {
        display: flex;
        align-items: center;
        margin-top: 1rem;
      }

      .toggle-container label {
        display: flex;
        align-items: center;
        cursor: pointer;
        margin-bottom: 0;
      }

      .toggle-switch {
        position: relative;
        display: inline-block;
        width: 50px;
        height: 24px;
        margin-right: 10px;
      }

      .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
      }

      .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: 0.4s;
        border-radius: 24px;
      }

      .slider:before {
        position: absolute;
        content: "";
        height: 16px;
        width: 16px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        transition: 0.4s;
        border-radius: 50%;
      }

      input:checked + .slider {
        background-color: var(--primary-color);
      }

      input:focus + .slider {
        box-shadow: 0 0 1px var(--primary-color);
      }

      input:checked + .slider:before {
        transform: translateX(26px);
      }

      /* Ensure toggle switch circle stays contained */
      @media (max-width: 768px) {
        .slider:before {
          height: 16px;
          width: 16px;
          left: 4px;
          bottom: 4px;
        }

        input:checked + .slider:before {
          transform: translateX(26px);
        }
      }

      .featured-badge {
        display: inline-flex;
        align-items: center;
        background-color: rgba(52, 152, 219, 0.1);
        color: #e63b19;
        padding: 0.3rem 0.6rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-left: 0.5rem;
      }

      .featured-badge svg {
        width: 14px;
        height: 14px;
        margin-right: 0.3rem;
      }

      /* Updated button container and button styles */
      .btn-container {
        grid-column: span 2;
        margin-top: 1.5rem;
        display: flex;
        justify-content: flex-end; /* Align buttons to the right */
        gap: 1rem;
      }

      .btn {
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 120px; /* Ensure buttons have a minimum width */
        height: 48px; /* Fixed height for all buttons */
        line-height: 1;
      }

      .btn-primary {
        background: #e63b19;
        color: white;
      }

      .btn-primary:hover {
        background: #d22f0f;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
      }

      .btn-secondary {
        background: #7f8c9a;
        color: white;
        padding: 0.75rem 1.5rem;
        margin-top: 1.5rem; /* Ensure consistent padding */
      }

      .btn-secondary:hover {
        background: #6b7885;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        margin-top: 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
        color: #555;
        text-decoration: none;
      }

      .back-link:before {
        content: "‚Üê";
        margin-right: 0.5rem;
        transition: transform 0.3s ease;
      }

      .back-link:hover {
        color: var(--primary-color);
      }

      .back-link:hover:before {
        transform: translateX(-3px);
      }

      /* Animation classes */
      .fade-in-up {
        animation: fadeInUp 0.8s ease forwards;
      }

      .fade-in-right {
        animation: fadeInRight 0.8s ease forwards;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInRight {
        from {
          opacity: 0;
          transform: translateX(20px);
        }
        to {
          opacity: 1;
          transform: translateX(0);
        }
      }

      /* Illustration */
      .form-illustration {
        position: absolute;
        right: -100px;
        bottom: -100px;
        width: 300px;
        height: 300px;
        opacity: 0.05;
        pointer-events: none;
        z-index: 0;
      }

      /* Responsive fixes */
      @media (max-width: 768px) {
        .form-header {
          padding: 2rem 1.5rem;
        }

        .form-container {
          padding: 2rem 1.5rem;
          margin: 0 1rem 2rem;
        }

        .form-grid {
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .form-group.half-width,
        .form-group.full-width {
          grid-column: span 1;
        }

        .btn-container {
          grid-column: span 1;
          flex-direction: column-reverse; /* Stack buttons in reverse on mobile */
          align-items: stretch; /* Make buttons full width */
        }

        .btn {
          width: 100%;
          height: 48px; /* Maintain consistent height on mobile */
        }

        .btn-secondary,
        .btn-primary {
          padding: 0.75rem 1.5rem; /* Consistent padding on mobile */
        }
      }
    </style>
  </head>
  <body>
    <div class="page-container">
      <header class="header">
        <div class="container header-container">
          <div class="logo">
            <a href="/">CMS Blog</a>
          </div>
          <nav class="nav">
            <ul>
              <li>
                <a
                  href="/"
                  class="<%= currentPage === 'home' ? 'active' : '' %>"
                  >Home</a
                >
              </li>
              <li>
                <a
                  href="/blog"
                  class="<%= currentPage === 'blog' ? 'active' : '' %>"
                  >Blog</a
                >
              </li>
              <li>
                <a
                  href="/articles/new"
                  class="<%= currentPage === 'add-article' ? 'active' : '' %>"
                  >Add article</a
                >
              </li>
            </ul>
          </nav>
        </div>
      </header>

      <!-- Form Header -->
      <div class="form-header animate__animated animate__fadeIn">
        <h1>Edit Article</h1>
        <p>
          Update your article content and settings to keep your knowledge fresh
          and relevant
        </p>
      </div>

      <div class="container">
        <div class="form-container fade-in-up">
          <!-- Form Illustration -->
          <svg
            class="form-illustration"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path
              d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
            ></path>
            <path
              d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
            ></path>
          </svg>

          <form
            action="/update-article/<%= article.id %>"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-grid">
              <div class="form-group full-width">
                <label for="title">Article Title</label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  value="<%= article.title %>"
                  required
                />
              </div>

              <div class="form-group full-width">
                <label for="content">Article Content</label>
                <textarea id="content" name="content" rows="10" required>
<%= article.content.trim() %></textarea
                >
              </div>

              <div class="form-group half-width">
                <label for="author">Author Name</label>
                <input
                  type="text"
                  id="author"
                  name="author"
                  value="<%= article.author || '' %>"
                />
              </div>

              <div class="form-group half-width">
                <label for="date">Publication Date</label>
                <input
                  type="date"
                  id="date"
                  name="date"
                  value="<%= typeof article.date === 'object' ? article.date.toISOString().split('T')[0] : article.date %>"
                  required
                />
              </div>

              <div class="form-group full-width">
                <label for="image">Banner Image</label>
                <% if (article.image) { %>
                <div class="current-image">
                  <img
                    src="<%= article.image %>"
                    alt="Current image"
                    class="image-preview"
                  />
                  <div class="image-filename">
                    Current image: <%= article.image.split('/').pop() %>
                  </div>
                </div>
                <% } %>
                <div class="file-input-container">
                  <div class="file-input-icon">üì∑</div>
                  <div class="file-input-text">
                    Drag and drop a new image or click to browse
                  </div>
                  <div class="file-name"></div>
                  <input type="file" id="image" name="image" accept="image/*" />
                  <p class="help-text">Leave empty to keep current image</p>
                </div>
              </div>

              <!-- Toggle for Featured Article -->
              <div class="form-group half-width">
                <div class="toggle-container">
                  <label class="toggle-switch">
                    <input type="checkbox" id="isFeatured" name="isFeatured" <%=
                    article.isFeatured ? 'checked' : '' %> />
                    <span class="slider"></span>
                  </label>
                  <span>
                    Feature this article on homepage
                    <span class="featured-badge">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polygon
                          points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
                        ></polygon>
                      </svg>
                      Featured
                    </span>
                  </span>
                </div>
              </div>

              <!-- Action Buttons - Fixed layout -->
              <div
                class="btn-container fade-in-up"
                style="animation-delay: 0.3s"
              >
                <a href="/blog" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                  Update Article
                </button>
              </div>
            </div>

            <a href="/blog" class="back-link">Back to Blog</a>
          </form>
        </div>
      </div>

      <footer class="footer">
        <div class="container">
          <p>
            &copy; <%= new Date().getFullYear() %> CMS Blog. All rights
            reserved.
          </p>
        </div>
      </footer>
    </div>

    <script>
      // Animation for elements with classes
      document.addEventListener("DOMContentLoaded", function () {
        const fadeElements = document.querySelectorAll(
          ".fade-in-up, .fade-in-right"
        );

        fadeElements.forEach((el, index) => {
          setTimeout(() => {
            el.style.opacity = "1";
            el.style.transform = "translateY(0)";
          }, 100 * index);
        });

        // File input handling for better UX
        const fileInput = document.getElementById("image");
        const fileNameDisplay = document.querySelector(".file-name");

        fileInput.addEventListener("change", function () {
          if (this.files && this.files[0]) {
            fileNameDisplay.textContent = "Selected: " + this.files[0].name;
            fileNameDisplay.style.display = "block";

            // Change the icon and text to show success
            const fileIcon = document.querySelector(".file-input-icon");
            const fileText = document.querySelector(".file-input-text");
            fileIcon.innerHTML = "‚úì";
            fileIcon.style.color = "#27ae60";
            fileText.textContent = "New image selected successfully";
          }
        });
      });
    </script>
  </body>
</html>

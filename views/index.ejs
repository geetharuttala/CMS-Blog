      // Typing effect for hero heading
      document.addEventListener("DOMContentLoaded", function () {
        const headingElement = document.getElementById("typing-heading");
        const paragraphElement = document.getElementById("hero-paragraph");
        const textToType = "Build your digital voice!";
        let charIndex = 0;
        let typingInterval;

        // Create cursor element
        const cursor = document.createElement("span");
        cursor.className = "typing-cursor";
        headingElement.appendChild(cursor);

        // Function to type one character
        function typeNextChar() {
          if (charIndex < textToType.length) {
            // Insert the next character before the cursor
            headingElement.insertBefore(
              document.createTextNode(textToType.charAt(charIndex)),
              cursor
            );
            charIndex++;
          } else {
            // Typing complete, clear the interval
            clearInterval(typingInterval);

            // Show paragraph with fade-in effect after typing is complete
            setTimeout(() => {
              paragraphElement.classList.add("fade-in");
            }, 400); // Small delay after typing completes
          }
        }

        // Start typing with a delay to allow page to load
        setTimeout(() => {
          typingInterval = setInterval(typeNextChar, 100); // Adjust speed (milliseconds) as needed
        }, 500);
      });

      document.addEventListener("DOMContentLoaded", function () {
        // Elements to animate
        const elementsToAnimate = [
          document.querySelector(".hero"),
          document.querySelector(".latest-articles .section-header"),
          document.querySelector(".articles-grid"),
          document.querySelector(".add-article-content"),
          document.querySelector(".why-choose .section-title"),
          document.querySelector(".features-grid"),
        ];

        // Add slide-up class to all animation elements
        elementsToAnimate.forEach((element) => {
          if (element) {
            element.classList.add("slide-up");
          }
        });

        // Check if element is in viewport and add visible class
        function checkScroll() {
          elementsToAnimate.forEach((element) => {
            if (!element) return;

            const elementTop = element.getBoundingClientRect().top;
            const elementVisible = 150; // Adjust this value to change when the animation triggers

            if (elementTop < window.innerHeight - elementVisible) {
              element.classList.add("visible");
            }
          });
        }

        // Initial check on page load
        checkScroll();

        // Check on scroll
        window.addEventListener("scroll", checkScroll);
      });
    </script>
